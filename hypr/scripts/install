#/bin/bash

#Install Paru
sudo pacman -S --needed base-devel git
git clone https://aur.archlinux.org/paru.git
cd paru
makepkg -si
cd ..
rm -r paru
paru

#install packages
paru -S hyprland kitty ranger wofi swaylock-effects firefox discord virtualbox swww hyprshot hybrid-bar nautilus upower brightnessctl volumectl dunst bat acpi iw pfetch visual-studio-code-bin vencord parui-git github-cli minecraft-launcher jre10 jre-openjdk blueberry-wayland starship fish

#install rwp, wifi, & bluetooth
cd background/
mv random_wallpaper rwp
sudo cp rwp /bin/
cd ..
cd launch/
sudo cp bluetooth /bin/
sudo cp wifi /bin/

cat bashrcappend >> ~/.bashrc

cd ../../../
cp -r hypr ~/.config
cp -r HybridBar ~/.config
cp -r Vencord ~/.config
cp -r VirtualBox ~/.config
cp -r dunst ~/.config
cp -r kitty ~/.config
cp -r swaylock ~/.config
cp -r wofi ~/.config
cp -r starship ~/.config

clear
echo -e "Successfully Installed Zach's Dotfiles.\n\n"